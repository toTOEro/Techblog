<section class="card my-2 mx-3">
    <div class="card-body">
        <h5 class="card-title">{{posts.post_name}}</h5>
        <p class="card-text">{{posts.contents}}</p>

    </div>

    <div class="d-flex card-header border-top ">
        <h5 class="ms-auto"> Posted By: <i>{{posts.user.username}}</i> on: {{format_date posts.post_date}} </h5>
    </div>

</section>



{{#if posts.comments}}
<section>
    <h3 class="my-2 mx-3">Comments:</h3>
    {{#each posts.comments }}
    {{> comment-details }}
    {{/each}}
</section>
{{/if}}

<section class="card my-2 mx-3">
    <div class="card-body">
        <form id='commentForm'>
            <div class="form-group">
                <label for="commment">Comment:</label>
                <input type="text" class="form-control" id="comment" placeholder="Enter comment">
            </div>

            <button type="submit" class="btn btn-primary my-2">Submit</button>
        </form>
    </div>
</section>

<script src="../js/comments.js"></script>