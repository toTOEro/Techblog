<section class="card my-2 mx-3">

    <div class="card-body">
        <h5 class="card-title">{{post.post_name}}</h5>
        <p class="card-text">{{post.contents}}</p>

    </div>

    <div class="d-flex card-header border-top ">
        <h5 class="ms-auto"> Posted By: <i>{{post.user.username}}</i> </h5>
    </div>

</section>


{{#if comments}}
<section>
    {{#each comments}}

</section>

{{/if}}

<section class="card my-2 mx-3">
    <div class="card-body">
        <form id='commentForm'>
            <div class="form-group">
                <label for="commment">Comment:</label>
                <input type="text" class="form-control" id="comment" placeholder="Enter comment">
            </div>

            <button type="submit" class="btn btn-primary my-2">Submit</button>
        </form>
    </div>
</section>