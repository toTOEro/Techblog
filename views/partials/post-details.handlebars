<section class="card my-2 mx-3">
    <a class="text-decoration-none text-reset" href="/post/{{id}}">
        <div class="card-body">
            <h5 class="card-title">{{post_name}}</h5>
            <p class="card-text">{{contents}}</p>

        </div>

        <div class="d-flex card-header border-top ">
            <h5 class="ms-auto"> Posted By: <i>{{user.username}}</i> on: {{format_date post_date}} </h5>
        </div>

    </a>
</section>