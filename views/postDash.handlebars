<div class="my-2 mx-3">
    <h5>Edit this post?</h5>
    <section class="card">
        <div class="d-flex flex-column card-body">
            <h5><input class="postTitle" type="text" placeholder="(Edit Title)" value="{{post.post_name}}"></h5>
            <textarea class="postContents" placeholder="(Edit Contents)">{{post.contents}}</textarea>


        </div>
        <button id="submitUpdate" type="submit" class="btn btn-primary my-2 mx-auto">Update</button>


    </section>
</div>

<script src="/js/updatePost.js"></script>